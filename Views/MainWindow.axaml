<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PlannerA.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PlannerA.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="PlannerA">

	<StackPanel Orientation="Vertical">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<StackPanel Orientation="Horizontal">

				<TabControl Margin="5">
					<TabItem Header="Заказы">
						<StackPanel Orientation="Vertical">
							<TextBlock Margin="5">Перечень заказов</TextBlock>
							<SplitButton Content="Выбрать" >
								<SplitButton.Flyout>
									<MenuFlyout Placement="Bottom">
										<MenuItem Header="Труба стальная 1000 штук">
											<MenuItem Header="Договор 1 от 20.03.2023" />
											<MenuItem Header="Договор 2 от 22.03.2023" />
											<MenuItem Header="Диаметр 3 от 29.03.2023" />
										</MenuItem>
										<MenuItem Header="Втулка золотая 1 штука"
												  InputGesture="Ctrl+A" />
										<MenuItem Header="Шестерня шерстяная 10 штук" />
									</MenuFlyout>
								</SplitButton.Flyout>
							</SplitButton>
							<Button Margin="5">Редактировать</Button>
						</StackPanel>
					</TabItem>


					<TabItem Header="Оборудование">
						<StackPanel Orientation="Vertical">
							<TextBlock Margin="5">Перечень оборудования</TextBlock>
							<ListBox x:Name="Equipment" Margin="5" Height="200" SelectionMode="Single">
								<ListBoxItem> 1</ListBoxItem>
								<ListBoxItem> 2</ListBoxItem>
								<ListBoxItem> 3</ListBoxItem>
								<ListBoxItem> 4</ListBoxItem>
								<ListBoxItem> 5</ListBoxItem>
								<ListBoxItem> 6</ListBoxItem>
								<ListBoxItem> 7</ListBoxItem>
								<ListBoxItem> 8</ListBoxItem>
								<ListBoxItem> 9</ListBoxItem>
							</ListBox>
							<StackPanel Orientation="Horizontal">
								<Button Margin="5" Click="SelectButton_Click">Выбрать</Button>
								<Button Margin="5" Click="UseInDiagramButton_Click">Добавить новый компонент</Button>
								<Button Margin="5" Click="EditButton_Click">Редактировать</Button>
								<Button Margin="5" Click="DeleteButton_Click" Background="Red">Удалить</Button>
							</StackPanel>
						</StackPanel>
					</TabItem>

					<TabItem Header="Сотрудники">
						<StackPanel Orientation="Vertical">
							<TextBlock Margin="5">Перечень сотрудников</TextBlock>
							<ListBox x:Name="Staff" Margin="5" Height="200" SelectionMode="Single">
								<ListBoxItem> 1</ListBoxItem>
								<ListBoxItem> 2</ListBoxItem>
								<ListBoxItem> 3</ListBoxItem>
								<ListBoxItem> 4</ListBoxItem>
								<ListBoxItem> 5</ListBoxItem>
								<ListBoxItem> 6</ListBoxItem>
								<ListBoxItem> 7</ListBoxItem>
								<ListBoxItem> 8</ListBoxItem>
								<ListBoxItem> 9</ListBoxItem>
							</ListBox>
							<StackPanel Orientation="Horizontal">
								<Button Margin="5" Click="SelectButton_Click">Выбрать</Button>
								<Button Margin="5" Click="UseInDiagramButton_Click">Добавить новый компонент</Button>
								<Button Margin="5" Click="EditButton_Click">Редактировать</Button>
								<Button Margin="5" Click="DeleteButton_Click" Background="Red">Удалить</Button>
							</StackPanel>
						</StackPanel>
					</TabItem>

					<TabItem Header="Материалы">
						<StackPanel Orientation="Vertical">
							<TextBlock Margin="5">Перечень материалов</TextBlock>
							<ListBox x:Name="MaterialsList" Margin="5" Height="200" SelectionMode="Single">
								<ListBoxItem>Деталь 1</ListBoxItem>
								<ListBoxItem>Деталь 2</ListBoxItem>
								<ListBoxItem>Деталь 3</ListBoxItem>
								<ListBoxItem>Деталь 4</ListBoxItem>
								<ListBoxItem>Деталь 5</ListBoxItem>
								<ListBoxItem>Деталь 6</ListBoxItem>
								<ListBoxItem>Деталь 7</ListBoxItem>
								<ListBoxItem>Деталь 8</ListBoxItem>
								<ListBoxItem>Деталь 9</ListBoxItem>
							</ListBox>
							<StackPanel Orientation="Horizontal">
								<Button Margin="5" Click="SelectButton_Click">Выбрать</Button>
								<Button Margin="5" Click="UseInDiagramButton_Click">Добавить новый компонент</Button>
								<Button Margin="5" Click="EditButton_Click">Редактировать</Button>
								<Button Margin="5" Click="DeleteButton_Click" Background="Red">Удалить</Button>
							</StackPanel>
						</StackPanel>
					</TabItem>


