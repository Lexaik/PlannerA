								<ListBoxItem>Оборудование 8</ListBoxItem>
								<ListBoxItem>Оборудование 9</ListBoxItem>
							</ListBox>
							<StackPanel Orientation="Horizontal">
								<Button Margin="5" Click="SelectButton_Click">Выбрать</Button>
