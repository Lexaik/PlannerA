								<ListBoxItem>Заказ 8</ListBoxItem>
								<ListBoxItem>Заказ 9</ListBoxItem>
							</ListBox>
							<StackPanel Orientation="Horizontal">
								<Button Margin="5" Click="SelectButton_Click">Выбрать</Button>
								<Button Margin="5" Click="AddNewComponentButton_Click">Добавить новый компонент</Button>
								<Button Margin="5" Click="EditButton_Click">Редактировать</Button>
								<Button Margin="5" Click="DeleteButton_Click" Background="Red">Удалить</Button>
							</StackPanel>
						</StackPanel>
					</TabItem>


					<TabItem Header="Оборудование">
